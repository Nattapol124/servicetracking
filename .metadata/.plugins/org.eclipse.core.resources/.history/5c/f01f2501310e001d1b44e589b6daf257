<script type="text/javascript">

	function submitId(mode) {
		document.forms[0].mode.value = mode;
	    document.forms[0].submit();
	}
	
	function add(){
		document.forms[0].mode.value = "requestBtn";
		document.forms[0].submit();
	}
	
	function edit(id){
		  document.masterForm.mode.value = "edit";
		  	document.masterForm.id.value = id;
		    document.masterForm.submit();
	}
	
	function del(id){
		Swal.fire({
			  title: 'Are you sure?',
			  text: "You want to delete!",
			  icon: 'warning',
			  showCancelButton: true,
			  confirmButtonColor: '#3085d6',
			  cancelButtonColor: '#d33',
			  confirmButtonText: 'Yes'
			}).then((result) => {
				if(result.isConfirmed){
					document.masterForm.mode.value = "deleteRequest";
				  	document.masterForm.id.value = id;
				    document.masterForm.submit();
				}
			    
			  })
		  
	}
	
</script>

